rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: user is authenticated and owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User profiles - user can read/write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // User entities - highly sensitive, user-only access
    match /users/{userId}/entities/{document} {
      allow read, write: if isOwner(userId);
    }

    // User horoscopes - user-only access
    match /users/{userId}/horoscopes/{document} {
      allow read, write: if isOwner(userId);
    }

    // Conversations - user can only access their own conversations
    match /conversations/{conversationId} {
      allow read: if isOwner(resource.data.user_id);
      allow create: if isOwner(request.resource.data.user_id);
      allow update: if isOwner(resource.data.user_id);
      allow delete: if false;  // No client-side deletion
    }

    // Memory collection - server-side ONLY (no client access ever)
    match /memory/{userId} {
      allow read, write: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
